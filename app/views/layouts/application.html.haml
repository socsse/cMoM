%html
  %head
    %title cMoM
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = yield :head
    = csrf_meta_tags
    %body
      #container
        %header
          .company_logo
            = link_to image_tag( "microsemi.gif"), "http://www.microsemi.com/soc", { :target => "_blank" }
          %nav
            - if user_signed_in?
              %ul
                %li= current_user.email
                %li= link_to 'My Account', edit_user_registration_path, :remote => true
                %li= link_to 'Log Out', destroy_user_session_path, :method => :delete
            - elsif params[:controller] != "devise/registrations" && params[:controller] != "devise/sessions"
              #login_container
                = semantic_form_for( "user", :url => user_session_path) do |form|
                  %table{:cellspacing => 0}
                    %tbody
                      %tr
                        %td
                          = form.input :email, :label => "Email:"
                        %td
                          = form.input :password, :label => "Password:"
                        %td
                          %br
                          = form.buttons do
                            = form.commit_button "Sign In"
                      %tr
                        %td
                          = form.input :remember_me, :as => :boolean, :label => "Remember me!"
                        %td
                          = link_to "Forgot your password?", new_password_path("user")
        #main{:role => "main"}
          = yield
        %footer
