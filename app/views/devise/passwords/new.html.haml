.page
  .page_header
    %h2 Forget your password?
  .page_body#forget_password_page
    - flash.each do |name, msg|
      = content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)
    = semantic_form_for( resource,
                         :as => resource_name, 
                         :html => { :method => :post },
                         :url => password_path(resource_name), 
                         :validate => true ) do |form|
      = form.inputs do
        = form.input :email, :label => "Email:", :validate => { :uniqueness => false }
      = form.buttons do
        = form.commit_button "Send me instructions for resetting my password"
    %ul#other_links
      %li
        Don't have an account?
        %br
        = link_to "Sign up now", new_user_registration_path
      %li
        Already know your password?
        %br
        = link_to "Sign in now", new_user_session_path
