source 'http://rubygems.org'

gem 'rails', '3.1.1'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.1.4'
  gem 'coffee-rails', '~> 3.1.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

# database related gems
gem "bson_ext", ">= 1.4.0"
gem "mongoid", ">= 2.3.0"
gem "database_cleaner", ">= 0.6.7", :group => :test
gem "mongoid-rspec", ">= 1.4.4", :group => :test

# using higher level testing tools (RSpec & Cucumber)
gem "capybara", ">= 1.1.1", :group => :test
gem "cucumber-rails", ">= 1.1.1", :group => :test
gem "factory_girl_rails", ">= 1.2.0", :group => :test
# gem "launchy", ">= 2.0.5", :group => :test
gem "rspec-rails", ">= 2.6.1", :group => [:development, :test]

# using Haml instead of ERB
gem "haml-rails", ">= 0.3.4"

# authorization
gem "devise", ">= 1.4.4"

# Deploy with Capistrano
gem 'capistrano', :group => :development

# To use debugger
# gem 'ruby-debug19', :require => 'ruby-debug'

gem 'activemessaging', :git => 'git://github.com/sgulics/activemessaging.git'
gem 'daemons'
gem 'stomp'

